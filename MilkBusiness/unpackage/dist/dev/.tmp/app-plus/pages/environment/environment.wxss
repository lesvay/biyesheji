}
.envir-logo{
	width: 100%;
	width: 100%;
	height: 310rpx;
	margin-top: 50rpx;
}
.envir-title{
	position: absolute;
	top: 0;
	line-height: 360rpx;
	font-size: 68rpx;
	color: #fff;
	text-align: center;
