
.login-box{
	padding: 0 100rpx;
	position: relative;
}
.login-logo{
	margin-top: 100rpx;
	width: 100%;
	width: 100%;
	height: 310rpx;
}
.login-title{
	position: absolute;
	top: 0;
	line-height: 360rpx;
	font-size: 68rpx;
	color: #fff;
	text-align: center;
	width: 100%;
	margin-left: -100rpx;
	margin-top: 100rpx;
}
.login-form{
	margin-top: 200rpx;
}
.login-input{
	background: #e2f5fc;
	margin-top: 30rpx;
	border-radius: 100rpx;
	padding: 20rpx 40rpx;
	font-size: 36rpx;
}
.input-placeholder, .login-input{
	color: #94afce;
}
.login-label{
	padding: 60rpx 0;
	text-align: center;
	font-size: 30rpx;
	color: #a7b6d0;
}
.login-btn{
	background: #4191ea;
	color: #fff;
	border: 0;
	border-radius: 100rpx;
	font-size: 36rpx;
	margin-top: 100rpx;
}
.login-btn:after{
	border: 0;
}
/*按钮点击效果*/
.login-btn.button-hover{
	-webkit-transform: translate(1rpx, 1rpx);
	        transform: translate(1rpx, 1rpx);
}

